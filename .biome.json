{
	"$schema": "https://biomejs.dev/schemas/1.3.0/schema.json",
	"version": "1.3.0",
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"noUnusedVariables": "off"
			}
		}
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "space",
		"indentWidth": 2,
		"lineWidth": 120,
		"quoteStyle": "single",
		"trailingComma": "all",
		"bracketSpacing": true,
		"arrowParentheses": "always"
	},
	"organizeImports": {
		"enabled": true
	}
}
